---
interface postItem {
  title: string;
  subtitle: string;
  imagePath: string;
}

const {
  title = "Post title",
  subtitle = "Post subtitle",
  imagePath = "/public/assets/images/blog.png",
} = Astro.props as postItem;
---

<div class="card">
  <img src={imagePath} alt="" />
  <h2>{title}</h2>
  <p>{subtitle}</p>
  <a href="">Read More</a>
</div>

<style>
  .card {
    flex: 1 1 calc(33.33% - 40px);
    padding: 40px;
    backdrop-filter: blur(30px);
    box-shadow: 0px 0px 10px 0px #00000033;
    box-shadow: 0px 0px 10px 0px #ffffff40 inset;
    box-shadow: 0px 4px 4px 0px #ffffff4d inset;
    box-shadow: 0px 2px 6px 0px #0000004d;
    background: #00000066;
    border-radius: 50px;

    img {
      border-radius: 20px;
      height: 240px;
    }

    h2 {
      font-size: 30px;
      font-weight: 700;
      color: #fff;
      margin-top: 10px;
    }

    p {
      color: #fff;
      font-size: 18px;
      font-weight: 400;
      margin-top: 10px;
    }

    a {
      display: block;
      margin-top: 40px;
      width: 100%;
      background-color: #fff;
      text-align: center;
      padding: 10px;
      border-radius: 75px;
      color: #000;
      font-size: 16px;
      font-family: Arial;
      font-weight: 700;
    }
  }

  @media screen and (max-width: 1200px) {
    .card {
      img {
        width: 100%;
        min-width: 240px;
        object-fit: contain;
      }
    }
  }

  @media screen and (max-width: 578px) {
    .card {
      h2 {
        font-size: 24px;
        line-height: 24px;
      }

      p {
        font-size: 14px;
        margin-top: 20px;
      }

      a {
        font-size: 22px;
      }
    }
  }
</style>
